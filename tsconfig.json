{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "System",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "strict": true
    }
}